[
  {
    "command": "workbench.files.action.refreshFilesExplorer",
    "key": "cmd+r"
  },
  {
    "command": "npm-script.install",
    "key": "ctrl+cmd+i"
  },
  {
    "command": "npm-script.start",
    "key": "ctrl+cmd+r"
  },
  {
    "args": {
      "text": "npm run build\r"
    },
    "command": "workbench.action.terminal.sendSequence",
    "key": "ctrl+cmd+b"
  },
  {
    "command": "workbench.action.openSettingsJson",
    "key": "cmd+alt+[Comma]" // '[Comma]' instead of ',' for supporting both the default and RU PC layout.
  },
  {
    "command": "workbench.action.terminal.toggleTerminal",
    "key": "ctrl+[Backquote]", // '[Backquote]' instead of '`' for supporting both the default and RU PC layout.
    "when": "terminal.active"
  },
  {
    "command": "workbench.action.terminal.kill",
    "key": "cmd+w",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.clear",
    "key": "cmd+backspace",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.focusPrevious",
    "key": "cmd+left",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.focusNext",
    "key": "cmd+right",
    "when": "terminalFocus"
  },
  // Extensions
  {
    "key": "alt+.",
    "command": "-docs.write",
    "when": "false"
  },
  {
    "key": "ctrl+.",
    "command": "-docs.write",
    "when": "false"
  },
  {
    "key": "alt+.",
    "command": "-docs.write",
    "when": "editorTextFocus && config.docwriter.hotkey.mac == '⌥ + .' && editorLangId =~ /typescript|javascript|python|php|java|c|cpp|csharp|dart|ruby|go|rust/"
  },
  {
    "key": "cmd+.",
    "command": "-docs.write",
    "when": "editorTextFocus && config.docwriter.hotkey.mac == '⌘ + .' && editorLangId =~ /typescript|javascript|python|php|java|c|cpp|csharp|dart|ruby|go|rust/"
  },
  {
    "command": "fileutils.renameFile",
    "key": "cmd+shift+r"
  },
  {
    "key": "alt+right",
    "command": "cursorWordPartRight",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+shift+right",
    "command": "cursorWordPartRightSelect",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+left",
    "command": "cursorWordPartLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+shift+left",
    "command": "cursorWordPartLeftSelect",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+backspace",
    "command": "deleteWordPartLeft",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+shift+backspace",
    "command": "deleteWordPartRight",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+s",
    "command": "editor.action.smartSelect.grow",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+shift+s",
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  }
  // {
  //   // Now I have alt+space as the Spotlight shortcut
  //   "key": "alt+space",
  //   "command": "editor.action.triggerSuggest",
  //   "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  // },
  // {
  //   "key": "ctrl+space",
  //   "command": "-editor.action.triggerSuggest",
  //   "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly"
  // }
]
