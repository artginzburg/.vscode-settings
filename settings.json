{
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "autoHide.autoHideAuxiliaryBar": false,
  "autoHide.hideOnOpen": false,
  "autoHide.panelDelay": 0,
  "autoHide.sideBarDelay": 0,
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,
  "color-highlight.matchWords": true,
  "console-ninja.featureSet": "Community",
  "console-ninja.showWhatsNew": false,
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en, ru",
  "dart.flutterSdkPath": "/Users/artginzburg/flutter", // related extension disabled
  "diffEditor.ignoreTrimWhitespace": true,
  "dotenv.enableAutocloaking": false,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.sortJSON": "explicit"
  },
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.suggest.preview": true,
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "editor.wordWrap": "on",
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "http.systemCertificates": false,
  "java.jdt.ls.java.home": "/opt/homebrew/opt/openjdk@21", // env-specific, don't copy
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "search.collapseResults": "auto",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.confirmOnKill": "always",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.preferences.preferTypeOnlyAutoImports": true, // TODO! check other new preferences
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.closeWhenEmpty": true,
  "window.restoreWindows": "preserve",
  "window.zoomPerWindow": false,
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Celestial",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "workbench.iconTheme": "icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",

  // new settings for me, experimentation
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "explicit",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 3,
  "window.commandCenter": false, // hides command center at the top of the window. Use cmd+shift+p instead,
  "workbench.layoutControl.enabled": false, // hides those little squares on the top right of the window,
  "workbench.editor.editorActionsLocation": "hidden", // hides the "format" and ellipsis buttons on the top right of the window,

  "editor.lineHeight": 1.42857, // makes font size 14 have line height of ~20px,
  "chat.commandCenter.enabled": false,

  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  "gitlens.ai.model": "vscode", // default setting
  "gitlens.ai.vscode.model": "copilot:gpt-4.1", // default setting

  "Î© a trailing line": "to not mess up comments formatting, when this config is modified programmatically"
}
