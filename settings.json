{
  "[json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "autoHide.autoHideAuxiliaryBar": false,
  "autoHide.hideOnOpen": false,
  "autoHide.panelDelay": 0,
  "autoHide.sideBarDelay": 0,
  "color-highlight.markerType": "dot-before",
  "color-highlight.markRuler": false,
  "color-highlight.matchWords": true,
  "console-ninja.featureSet": "Community",
  "console-ninja.showWhatsNew": false,
  "cSpell.diagnosticLevel": "Hint",
  "cSpell.language": "en, ru",
  "dart.flutterSdkPath": "/Users/artginzburg/flutter", // related extension disabled
  "diffEditor.ignoreTrimWhitespace": true,
  "dotenv.enableAutocloaking": false,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.sortJSON": "explicit"
  },
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.suggest.preview": true,
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
  "editor.wordWrap": "on",
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "http.systemCertificates": false,
  "java.jdt.ls.java.home": "/opt/homebrew/Cellar/openjdk@21/21.0.5", // env-specific, don't copy
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "search.collapseResults": "auto",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.confirmOnKill": "always",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.preferences.preferTypeOnlyAutoImports": true, // TODO! check other new preferences
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.closeWhenEmpty": true,
  "window.nativeTabs": true,
  "window.restoreWindows": "preserve",
  "window.zoomPerWindow": false,
  "workbench.colorTheme": "Celestial",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.iconTheme": "icons",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "mcp": {
    "servers": {
      "console-ninja": {
        "command": "npx",
        "args": ["-y", "-c", "node ~/.console-ninja/mcp/"]
      }
    }
  },
  "workbench.editorAssociations": {
    "*.svg": "default"
  }
}
